                                {{this.burger_name}} <button type="button" class="btn btn-light devour-btn" data-burgerid={{this.id}} data-burgername="{{{this.burger_name}}}" name="button">Devoured</button>
                            </th>
                        </tr>
                    {{/unless}}
                {{/each}} -->
            </tbody>
        </table>
    </div>

</div>


