<link rel="stylesheet" href="../assets/css/styles.css">
<div class="card mb-3">
  <img src="{{this.car.img}}" class="card-img-top car-page-img" alt="{{this.car.make}} {{this.car.body_style}}">
  <div class="card-body">
    <h5 class="card-title">{{this.car.make}} - {{this.car.body_style}}</h5>
    <p class="card-text">
        {{capitalizeFirst this.car.num_of_cylinders}} cylinders<br>
        <span class="car-info-title">MAX RPM:</span> {{this.car.peak_rpm}}<br>
        <span class="car-info-title">Horsepower (HP):</span> {{this.car.horsepower}}<br>
        <span class="car-info-title">Engine Location:</span> {{capitalizeFirst this.car.engine_location}}<br>
        <span class="car-info-title">City Miles Per Gallon (MPG):</span> {{this.car.city_mpg}}<br>
        <span class="car-info-title">Highway Miles Per Gallon (MPG):</span> {{this.car.highway_mpg}}<br>
        <span class="car-info-title">Weight:</span> {{this.car.curb_weight}}<br>
        <span class="car-info-title">Number of Doors:</span> {{this.car.num_of_doors}}<br>
        <span class="car-info-title">Fuel Type:</span> {{capitalizeFirst this.car.fuel_type}}
        <hr>
        <b>Price:</b> ${{this.car.price}}
    </p>

    <div class="text-center purchase-btns">
        {{#if (carHasBeenSold this.car.date_purchased)}}
            <h2 style="color:red;">SOLD</h2>
        {{else}}
            <button class="btn btn-success btn-md buynow-btn" type="button" name="button" data-carid={{this.car.id}}>Buy Now</button>

        {{/if}}
    </div>
    <div id="statuscenter{{this.car.id}}" class="text-center"></div>

    {{#if (carHasBeenSold this.car.date_purchased)}}
        <p class="card-text"><small class="text-muted">Purchased by {{this.car.User.dataValues.username}} on {{trimDate this.car.date_purchased}}</small></p>
    {{else}}
        <p class="card-text"><small class="text-muted">Last updated {{trimDate this.car.updatedAt}}</small></p>
    {{/if}}
  </div>
</div>

<!-- Custom JS -->
<script src="../js/listcars.js" type="text/javascript"></script>