<div class="row">
    <div class="col-sm">
        <h3 class="text-center">Purchased Cars</h3>
        <div class="purchase-car-display">
            {{#each car}}
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="{{this.img}}" class="card-img" alt="{{this.make}} {{this.body_style}}">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                            <h5 class="card-title">{{this.make}} - {{this.body_style}}</h5>
                            <p class="card-text">Price: ${{this.price}}</p>
                            <p class="card-text"><small class="text-muted">Purchased on {{trimDate this.date_purchased}}</small></p>
                            </div>
                        </div>
                    </div>
                    <div class="text-center purchase-btns">
                        <a href="/cars/{{this.id}}">
                            <button class="btn btn-outline-secondary btn-md" type="button" name="button">More Info</button>
                        </a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

